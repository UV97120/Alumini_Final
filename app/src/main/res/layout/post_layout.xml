<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ImageView
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_margin="8dp"
           android:id="@+id/imagePost"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/titlePost"
           android:layout_marginTop="5dp"
           android:text="Title"
           android:textStyle="bold"
           android:textSize="24dp"
           android:layout_toRightOf="@+id/imagePost"

           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:maxLines="3"
           android:id="@+id/contentPost"
           android:text="asdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfasdfas"
           android:layout_toRightOf="@+id/imagePost"
           android:layout_below="@+id/titlePost"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/branchHeading"
           android:text="Branch"
           android:layout_toRightOf="@+id/imagePost"
           android:textStyle="bold"
           android:layout_below="@+id/contentPost"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/branchTitle"
           android:text="Computer"
           android:textStyle="bold"
           android:layout_below="@+id/contentPost"
           android:layout_toRightOf="@+id/branchHeading"
           android:layout_toEndOf="@+id/branchHeading" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/timeStamp"
           android:text="00:00:00"
           android:textStyle="italic"
           android:layout_alignBottom="@+id/imagePost"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true"
           android:layout_below="@+id/branchTitle" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/postUser"
           android:text="xyz"
           android:layout_marginLeft="8dp"
           android:layout_toRightOf="@+id/imagePost"
           android:layout_below="@+id/branchHeading"
           android:textStyle="italic" />

   </RelativeLayout>

</android.support.v7.widget.CardView>